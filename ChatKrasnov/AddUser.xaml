<Window
    x:Class="ChatKrasnov.AddUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChatKrasnov"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddUser"
    Width="300"
    Height="250"
    mc:Ignorable="d">
    <Grid>
        <ComboBox
            x:Name="CmbboxUser"
            Width="120"
            Margin="0,71,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            DisplayMemberPath="Name" />
        <Label
            Margin="0,40,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Выберите Для добавления" />
        <Button x:Name="BtnADD" Content="Добавить в чат" HorizontalAlignment="Center" Margin="0,131,0,0" VerticalAlignment="Top" Width="100" Click="BtnADD_Click"/>

    </Grid>
</Window>
